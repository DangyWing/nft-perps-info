// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider     = "mysql"
    url          = env("DATABASE_URL")
    relationMode = "prisma"
}

model PositionUpdatedEvent {
    id                              String   @id @default(cuid())
    updatedAt                       DateTime @updatedAt
    timestamp                       BigInt
    trader                          String
    ammName                         String
    side                            String
    size                            String
    entryPrice                      String
    markPrice                       String
    leverage                        String
    notional                        String
    fundingPayment                  String
    unrealizedPnl                   Float
    liquidationPrice                Float
    marginRatio                     Float
    lastUpdatedTimestamp            String
    nftPerpId                       String
    amm                             String
    blockNumber                     String
    exchangedPositionSize           String
    exchangedPositionNotional       String
    isLiquidatable                  Boolean
    margin                          String
    marginRatioToMinimumMarginRatio Float
    markToLiq                       Float
    positionSizeAfter               String
    unrealizedPnlAfter              String
}
